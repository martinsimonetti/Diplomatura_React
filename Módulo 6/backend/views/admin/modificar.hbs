<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group mb-3">
                    <label>Título</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="form-group mb-3">
                    <label>Subtítulo</label>
                    <textarea class="form-control" name="subtitulo">{{novedad.subtitulo}}</textarea>                    
                </div>
                <div class="form-group mb-3">
                    <label>Imagen: <input type="file" name="imagen" id="imagen"> </label>
                    <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> ¿Eliminar imagen actual?</label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                </div>
                <div class="form-group mb-3">
                    <label>Cuerpo</label>
                    <textarea class="form-control" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>